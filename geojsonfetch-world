import os
import json
import requests
from zipfile import ZipFile
import pycountry

# ğŸŒ URL van de wereld-GeoJSON repo
REPO_URL = "https://github.com/georgique/world-geojson/archive/refs/heads/master.zip"

# ğŸ“‚ Output directories
DATA_DIR = "geojson_data"
OUTPUT_FILE = "wereld.geojson"

# ğŸ”¹ Correcte ISO 3166-codes voor speciale regio's en overzeese gebieden
ISO_OVERRIDES = {
    # ğŸ‡¬ğŸ‡§ Britse gebieden
    "Anguilla": ("AI", "AIA"),
    "Bermuda": ("BM", "BMU"),
    "British Indian Ocean Territory": ("IO", "IOT"),
    "British Virgin Islands": ("VG", "VGB"),
    "Cayman Islands": ("KY", "CYM"),
    "Falkland Islands": ("FK", "FLK"),
    "Gibraltar": ("GI", "GIB"),
    "Montserrat": ("MS", "MSR"),
    "Pitcairn": ("PN", "PCN"),
    "Saint Helena": ("SH", "SHN"),
    "South Georgia and the South Sandwich Islands": ("GS", "SGS"),
    "Turks and Caicos Islands": ("TC", "TCA"),

    # ğŸ‡ºğŸ‡¸ Amerikaanse gebieden
    "American Samoa": ("AS", "ASM"),
    "Guam": ("GU", "GUM"),
    "Northern Mariana Islands": ("MP", "MNP"),
    "Puerto Rico": ("PR", "PRI"),
    "United States Minor Outlying Islands": ("UM", "UMI"),
    "United States Virgin Islands": ("VI", "VIR"),

    # ğŸ‡³ğŸ‡± Nederlandse gebieden
    "Aruba": ("AW", "ABW"),
    "Curacao": ("CW", "CUW"),
    "Sint Maarten": ("SX", "SXM"),
    "Bonaire": ("BQ-BO", "BES"),
    "Saba": ("BQ-SA", "BES"),
    "Sint Eustatius": ("BQ-SE", "BES"),

    # ğŸ‡«ğŸ‡· Franse gebieden
    "French Guiana": ("GF", "GUF"),
    "French Polynesia": ("PF", "PYF"),
    "French Southern Territories": ("TF", "ATF"),
    "Guadeloupe": ("GP", "GLP"),
    "Martinique": ("MQ", "MTQ"),
    "Mayotte": ("YT", "MYT"),
    "New Caledonia": ("NC", "NCL"),
    "RÃ©union": ("RE", "REU"),
    "Saint Barthelemy": ("BL", "BLM"),
    "Saint Martin": ("MF", "MAF"),
    "Saint Pierre and Miquelon": ("PM", "SPM"),
    "Wallis and Futuna": ("WF", "WLF"),

    # ğŸ‡³ğŸ‡´ Noorse gebieden
    "Jan Mayen": ("SJ", "SJM"),
    "Svalbard": ("SJ", "SJM"),

    # ğŸ‡¨ğŸ‡³ Chinese gebieden
    "Hong Kong": ("HK", "HKG"),
    "Macau": ("MO", "MAC"),
    "Taiwan": ("TW", "TWN"),

    #Azerbaijan 
    "Nakhchivan": "NX"
